<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/constraintLayout"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <TextView
    android:id="@+id/section_label"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_marginEnd="@dimen/activity_horizontal_margin"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="@+id/constraintLayout"
    tools:layout_constraintLeft_creator="1"
    tools:layout_constraintTop_creator="1"/>
  <TextView
    android:id="@+id/textView"
    android:layout_width="105dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:text="@string/attributes"
    android:textAlignment="center"
    android:textSize="24sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>
  <TextView
    android:id="@+id/textDex"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="36dp"
    android:layout_marginStart="52dp"
    android:text="@string/dexStat"
    android:textSize="18sp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textView"/>
  <EditText
    android:id="@+id/textDexValue"
    android:layout_width="28dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    android:layout_marginStart="24dp"
    android:text="99"
    android:inputType="number"
    android:textSize="18sp"
    app:layout_constraintStart_toEndOf="@+id/textDex"
    app:layout_constraintTop_toBottomOf="@+id/textView"/>
  <TextView
    android:id="@+id/textStr"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="32dp"
    android:text="@string/strStat"
    android:textSize="18sp"
    app:layout_constraintBaseline_toBaselineOf="@+id/textDex"
    app:layout_constraintStart_toEndOf="@+id/textDexValue"/>
  <EditText
    android:id="@+id/textStrValue"
    android:layout_width="28dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="28dp"
    android:inputType="number"
    android:text="99"
    android:textSize="18sp"
    app:layout_constraintBaseline_toBaselineOf="@+id/textDexValue"
    app:layout_constraintStart_toEndOf="@+id/textStr"/>
  <TextView
    android:id="@+id/textBody"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="32dp"
    android:text="@string/bodyStat"
    android:textSize="18sp"
    app:layout_constraintBaseline_toBaselineOf="@+id/textDex"
    app:layout_constraintStart_toEndOf="@+id/textStrValue"/>
  <EditText
    android:id="@+id/textBodyValue"
    android:layout_width="28dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:inputType="number"
    android:text="99"
    android:textSize="18sp"
    app:layout_constraintBaseline_toBaselineOf="@+id/textDexValue"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toEndOf="@+id/textBody"/>
  <TextView
    android:id="@+id/textInt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="32dp"
    android:layout_marginStart="52dp"
    android:text="@string/intStat"
    android:textSize="18sp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textDex"/>
  <EditText
    android:id="@+id/textIntValue"
    android:layout_width="28dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    android:layout_marginStart="32dp"
    android:text="99"
    android:inputType="number"
    android:textSize="18sp"
    app:layout_constraintStart_toEndOf="@+id/textInt"
    app:layout_constraintTop_toBottomOf="@+id/textDex"/>
  <TextView
    android:id="@+id/textWill"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="32dp"
    android:text="@string/willStat"
    android:textSize="18sp"
    app:layout_constraintBaseline_toBaselineOf="@+id/textInt"
    app:layout_constraintStart_toEndOf="@+id/textIntValue"/>
  <EditText
    android:id="@+id/textWillValue"
    android:layout_width="28dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    android:inputType="number"
    android:text="99"
    android:textSize="18sp"
    app:layout_constraintBaseline_toBaselineOf="@+id/textIntValue"
    app:layout_constraintStart_toEndOf="@+id/textWill"/>
  <TextView
    android:id="@+id/textView6"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="32dp"
    android:text="@string/mindStat"
    android:textSize="18sp"
    app:layout_constraintBaseline_toBaselineOf="@+id/textInt"
    app:layout_constraintStart_toEndOf="@+id/textWillValue"/>
  <EditText
    android:id="@+id/textView7"
    android:layout_width="28dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:inputType="number"
    android:text="99"
    android:textSize="18sp"
    app:layout_constraintBaseline_toBaselineOf="@+id/textIntValue"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toEndOf="@+id/textView6"/>
  <TextView
    android:id="@+id/textInfl"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="36dp"
    android:layout_marginStart="56dp"
    android:text="@string/inflStat"
    android:textSize="18sp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textInt"/>
  <EditText
    android:id="@+id/textInflValue"
    android:layout_width="28dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    android:layout_marginStart="28dp"
    android:text="99"
    android:inputType="number"
    android:textSize="18sp"
    app:layout_constraintStart_toEndOf="@+id/textInfl"
    app:layout_constraintTop_toBottomOf="@+id/textInt"/>
  <TextView
    android:id="@+id/textAura"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="32dp"
    android:text="@string/auraStat"
    android:textSize="18sp"
    app:layout_constraintBaseline_toBaselineOf="@+id/textInfl"
    app:layout_constraintStart_toEndOf="@+id/textInflValue"/>
  <EditText
    android:id="@+id/textAuraValue"
    android:layout_width="28dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:inputType="number"
    android:text="99"
    android:textSize="18sp"
    app:layout_constraintBaseline_toBaselineOf="@+id/textInflValue"
    app:layout_constraintStart_toEndOf="@+id/textAura"/>
  <TextView
    android:id="@+id/textSpirit"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="32dp"
    android:text="@string/spiritStat"
    android:textSize="18sp"
    app:layout_constraintBaseline_toBaselineOf="@+id/textInfl"
    app:layout_constraintStart_toEndOf="@+id/textAuraValue"/>
  <EditText
    android:id="@+id/textSpiritValue"
    android:layout_width="28dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="24dp"
    android:inputType="number"
    android:text="99"
    android:textSize="18sp"
    app:layout_constraintBaseline_toBaselineOf="@+id/textInflValue"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toEndOf="@+id/textSpirit"/>
  <TextView
    android:id="@+id/textWealth"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="32dp"
    android:layout_marginStart="48dp"
    android:text="@string/wealthStat"
    android:textSize="18sp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textInfl"/>
  <EditText
    android:id="@+id/textWealthValue"
    android:layout_width="28dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    android:layout_marginStart="16dp"
    android:text="99"
    android:inputType="number"
    android:textSize="18sp"
    app:layout_constraintStart_toEndOf="@+id/textWealth"
    app:layout_constraintTop_toBottomOf="@+id/textInfl"/>
  <TextView
    android:id="@+id/textHeroPoints"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="32dp"
    android:text="@string/heroPoints"
    android:textSize="18sp"
    app:layout_constraintBaseline_toBaselineOf="@+id/textWealth"
    app:layout_constraintStart_toEndOf="@+id/textWealthValue"/>
  <EditText
    android:id="@+id/textHeroPointsValue"
    android:layout_width="50dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="24dp"
    android:inputType="number"
    android:text="9999"
    android:textSize="18sp"
    app:layout_constraintBaseline_toBaselineOf="@+id/textWealthValue"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toEndOf="@+id/textHeroPoints"/>

</android.support.constraint.ConstraintLayout>